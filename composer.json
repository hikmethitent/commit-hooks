{
    "name": "merchizm/commit-hooks-demo",
    "description": "CaptainHook kullanım örneği - Git hook'ları ile kod kalitesi kontrolü",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.22",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "pint": "pint",
        "pint-check": "pint --test",
        "hooks:install": "php vendor/bin/captainhook install",
        "hooks:enable": "php vendor/bin/captainhook enable",
        "hooks:disable": "php vendor/bin/captainhook disable"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "captainhook/captainhook": true
        }
    }
}