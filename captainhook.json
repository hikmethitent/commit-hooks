{
    "config": {
        "verbosity": "normal",
        "includes": []
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "#^(feat|fix|docs|style|refactor|test|chore)(\\(.+\\))?: .{1,50}#",
                    "error": "Commit mesajı formatı: 'type(scope): description' şeklinde olmalıdır. Örnek: 'feat(user): kullanıcı kayıt özelliği eklendi'"
                }
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": {
                    "standard": "PSR12"
                }
            },
            {
                "action": "shell",
                "options": {
                    "exec": "composer pint-check",
                    "fail-on-non-zero": true
                },
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ]
            },
            {
                "action": "shell",
                "options": {
                    "exec": "composer phpstan",
                    "fail-on-non-zero": true
                },
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ]
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    }
}